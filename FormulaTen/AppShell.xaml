<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FormulaTen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FormulaTen"
    FlyoutBackgroundColor="white"
    Shell.ForegroundColor="Black">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#c9c9c9">
            <Image Source="imagef1.png" Aspect="AspectFit" HeightRequest="150" WidthRequest="500"/>
            <Label Text="F1" HorizontalOptions="CenterAndExpand" FontSize="20" FontAttributes="Bold"/>
        </Grid>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Piloti">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:PilotiPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Gare >">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:GarePage}"/>
        </Tab>
    </FlyoutItem>
    
    <Shell.FlyoutFooter>
        <Grid RowDefinitions="*, *">
            <Label Grid.Row="0" Text="Made by" FontSize="18" HorizontalOptions="CenterAndExpand"/>
            <Label Grid.Row="1" Text="MCAMARDELLA" FontSize="18" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
        </Grid>
    </Shell.FlyoutFooter>
</Shell>
